    <link href="~/ansar-vdp.png" rel="shortcut icon" type="image/x-icon" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/Front_Template/")images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/Front_Template/")images/ico/apple-touch-icon-114-precomposed.png">
