@model BAV.Models.Event
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>


<div class="panel panel-white">
    <div class="panel-heading">
        <h3 class="panel-title">সদস্যেদের বেতন প্রদান</h3>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Payment", "Work", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label for="exampleInputName2">ইভেন্টের নাম</label>
                @Html.DropDownListFor(model => model.Id, ViewBag.eventname as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })
            </div>

            <input type="submit" id="s" value="Submit" class="btn btn-primary">
        }

        @{
            if (TempData["list"] != null)
            {
                Html.RenderAction("MemberEventList", "Work", new { s = "true" });

            }
        }

    </div>
</div>



