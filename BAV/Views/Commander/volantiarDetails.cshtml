@model BAV.Models.PersonalInfoMemberAddressBodyStructureReligion

@{
    ViewBag.Title = "MemberDetails";
    Layout = null;
}
<style>

    ul{
        list-style:none;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 5px 9px !important;
    }

    .table-bordered {
        border: 1px solid #ebebeb!important;
    }

    .table, .profile-name h3 {
        color: #969696;
    }

</style>


<div class="profile-env">

            <header class="row">

                <div class="col-sm-3">

                    <a href="#" class="profile-picture">
                        <img style="width:150px;height:100px" src="~/VolantiarImage/@Html.DisplayFor(model => model.Imge)" />
                    </a>

                </div>

                <div class="col-sm-9">

                    <ul class="profile-info-sections">
                        <li style="padding:0px; margin:0px;">
                            <div class="profile-name">
                                <h3>
                                    @Html.DisplayFor(model => model.bname, new { @class = "form-control input-sm" })
                                    <br />
                                    @Html.DisplayFor(model => model.ename, new { @class = "form-control input-sm" })
                                </h3>
                            </div>
                        </li>
                    </ul>

                </div>


            </header>

            <section class="profile-info-tabs">

                <div class="row">

                    
                        <br>
                        <table class="table table-bordered">

                            <tbody>
                                <tr class="active">
                                    <th colspan="3">ব্যক্তিগত তথ্য</th>
                                </tr>
                                <tr>
                                    <td>সদস্য নাম্বার:</td>
                                    <td><b>@Html.DisplayFor(model => model.membercode, new { @class = "form-control input-sm" })</b></td>
                                </tr>

                                <tr>
                                    <td>প্লাটুনের নাম:</td>
                                    <td><b>@Html.DisplayFor(model => model.platunname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>জন্ম তারিখ:</td>
                                    <td><b>@Html.DisplayFor(model => model.dob, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>জাতীয় পরিচয় পত্র নং: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.nid, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    @if (Model.sandadno == 1)
                                    {
                                        <td>ড্রাইভিং লাইসেন্স নং:</td>
                                        <td><b>@Html.DisplayFor(model => model.dobno, new { @class = "form-control input-sm" })</b></td>

                                    }
                                    else if (Model.sandadno == 2)
                                    {
                                        <td>পাসপোর্ট নং: </td>
                                        <td>@Html.DisplayFor(model => model.dobno, new { @class = "form-control input-sm" })</td>
                                    }
                                    else if (Model.sandadno == 3)
                                    {
                                        <td>জন্ম নিবন্ধন সনদ নং: </td>
                                        <td>@Html.DisplayFor(model => model.dobno, new { @class = "form-control input-sm" })</td>
                                    }

                                </tr>
                                <tr>
                                    <td>পেশা:</td>
                                    <td><b>@Html.DisplayFor(model => model.occupation, new { @class = "form-control input-sm" })</b></td>
                                </tr>

                                <tr>
                                    <td>ধর্ম:</td>
                                    <td><b>@Html.DisplayFor(model => model.religion, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>মোবাইল:</td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.mobile, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr class="active">
                                    <th colspan="3">পারিবারিক তথ্য</th>
                                </tr>
                                <tr>
                                    <td>পিতার নাম:</td>
                                    <td><b>@Html.DisplayFor(model => model.bfname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>Father Name:</td>
                                    <td><b>@Html.DisplayFor(model => model.efname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>মাতার নাম</td>
                                    <td><b>@Html.DisplayFor(model => model.bmname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>Mother Name</td>
                                    <td><b>@Html.DisplayFor(model => model.emname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>বৈবাহিক অবস্থা: </td>
                                    <td><b>@Html.DisplayFor(model => model.maritalstatus, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>স্বামী/স্ত্রীর নাম:</td>
                                    <td><b>@Html.DisplayFor(model => model.smname, new { @class = "form-control input-sm" })</b></td>
                                </tr>
                                <tr>
                                    <td>স্বামী/স্ত্রীর পেশা:</td>
                                    <td>
                                        <b>@Html.DisplayFor(model => model.smpasa, new { @class = "form-control input-sm" })</b>
                                    </td>
                                </tr>
                                

                                <tr class="border-double active">
                                    <th colspan="3">ঠিকানা</th>
                                </tr>

                                <tr>
                                    <td>স্থায়ী ঠিকানা: </td>
                                    <td><b>@Html.DisplayFor(model => model.paddress, new { @class = "form-control input-sm" }),
                                            @Html.DisplayFor(model => model.prpostcode, new { @class = "form-control input-sm" }),
                                            @Html.DisplayFor(model => model.perunion, new { @class = "form-control input-sm" }),
                                            @Html.DisplayFor(model => model.perunions, new { @class = "form-control input-sm" })
                                            @Html.DisplayFor(model => model.perthana, new { @class = "form-control input-sm" }),
                                            @Html.DisplayFor(model => model.perdist, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>

                                    <td>বর্তমান ঠিকানা: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.paddress, new { @class = "form-control input-sm" }),@Html.DisplayFor(model => model.prespostcode, new { @class = "form-control input-sm" }),
                                            @Html.DisplayFor(model => model.presunion, new { @class = "form-control input-sm" }),@Html.DisplayFor(model => model.presunions, new { @class = "form-control input-sm" })
                                            @Html.DisplayFor(model => model.presthana, new { @class = "form-control input-sm" }),@Html.DisplayFor(model => model.presdist, new { @class = "form-control input-sm" })
                                            
                                        </b>
                                    </td>
                                </tr>

                                <tr class="border-double active">
                                    <th colspan="3">শারিরীক যোগ্যতার তথ্য</th>
                                </tr>

                                <tr>
                                    <td>উচ্চতা: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.height, new { @class = "form-control input-sm" })
                                           
                                        </b>
                                    </td>
                                </tr>

                                <tr>
                                    <td>ওজন: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.weight, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>লিঙ্গ: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.zender, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>চোখের রং: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.cyecolor, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>রক্তের গ্রুপ: </td>
                                    <td>
                                        <b>
                                            @Html.DisplayFor(model => model.bloodgroup, new { @class = "form-control input-sm" })
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>সনাক্তকরণ চিহ্ন: </td>
                                   <td><b>@Html.DisplayFor(model => model.sanaktakarn, new { @class = "form-control input-sm" })</b></td>

                                </tr>
                                

                            </tbody>

                        </table>
                    
                </div>

            </section>



        </div>
 



