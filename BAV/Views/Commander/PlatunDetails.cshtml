@model List<BAV.Models.PlaDistric>

@{
    ViewBag.Title = "Platoon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="@Url.Content("~/Content/Back_Template/")assets/css/ansar-custom.css" rel="stylesheet" type="text/css">


<style>
    .dataTables_wrapper {
        top: -13px;
    }

    .datatable-header, .datatable-footer {
        padding-left: 20px;
        padding-right: 20px;
    }

    select {
        padding: 7px;
    }

    .dataTable thead .sorting:before, .dataTable thead .sorting:after {
        color: #fff !important;
    }
</style>

<div class="panel panel-white">

    <div class="panel-heading">
        <h5 class="panel-title">প্লাটুনের তথ্য</h5>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="form-horizontal">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-3 control-label">জেলা:</label>
                        <div class="col-md-9">
                            @Html.DropDownList("disid", ViewBag.districlist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-3 control-label">থানা:</label>
                        <div class="col-md-9">
                            @Html.DropDownList("subdisid", ViewBag.subdistriclist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
    </div>
    <hr />
    <div id="plarow">
        <table class="table datatable-basic-two table-bordered table-striped table-hover" id="plaTable">
            <thead>

                <tr class="bg-blue-600">
                    <th>নং</th>
                    <th>প্লাটুনের নাম</th>
                    <th>তৈরির তারিখ</th>
                    <th>জেলা</th>
                    <th>থানা</th>
                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                {
                <tr>
                    <td>@item.Index</td>
                    <td>@item.Data.PlatuneName</td>
                    <td>@item.Data.creationdte.ToShortDateString()</td>
                    <td>@item.Data.disnane</td>
                    <td>@item.Data.subname</td>
                </tr>
                }

            </tbody>
        </table>
    </div>

    <div id="partial"></div>


</div>


        @section Scripts {
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
            <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
            <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
            @*<link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel=" stylesheet" />*@
            <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

            <script type="text/javascript">
                $(document).ready(function () {
                    // Setup - add a text input to each footer cell
                    $('#plaTable tfoot th').each(function () {
                        var title = $(this).text();
                        $(this).html('<input type="text" placeholder="' + title + '" />');
                    });

                    // DataTable
                    var table = $('#plaTable').DataTable();

                    // Apply the search
                    table.columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    });
                });
            </script>
            <script type="text/javascript">
                $("#disid").change(function () {
                    if ($("#disid option:selected").val() == '') {
                        return false;
                    }
                    else {
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("platunlist", "Commander")',
                            data: { cid: $("#disid").val() },
                            success: function (result) {
                                $('#plarow').hide();
                                $('#partial').html(result);
                            },
                            error: function (ex) {

                                alert('Failed to retrieve.' + ex);
                            }
                        });
                        $.ajax({

                            type: 'POST',
                            url: '@Url.Action("GetThana", "Member")',
                            dataType: 'json',

                            data: { idd: $("#disid").val() },

                            success: function (Data) {

                                var markups = "<option value=''>সিলেক্ট</option>";
                                for (var x = 0; x < Data.length; x++) {
                                    markups += "<option Value=" + Data[x].Value + ">" + Data[x].Text + "</option>";
                                }
                                $("#subdisid").html(markups).show();
                            },

                            error: function (ex) {

                                alert('Failed to retrieve Thana.' + ex);

                            }

                        });
                    }

                    return false;

                })
                $("#subdisid").change(function () {

                    if ($("#subdisid option:selected").val() == '') {
                        return false;
                    }
                    else {
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("platunlist", "Commander")',
                            data: { sdid: $("#subdisid").val() },
                            success: function (result) {
                                $('#plarow').hide();
                                $('#partial').html(result);
                            },
                            error: function (ex) {

                                alert('Failed to retrieve.' + ex);

                            }

                        });
                    }

                    return false;

                })
            </script>
            @Scripts.Render("~/bundles/jqueryval")

        }
