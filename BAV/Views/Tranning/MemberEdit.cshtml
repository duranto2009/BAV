@model BAV.Models.AnsarInfo
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header border-default">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">ব্যক্তিগত তথ্য</h4>
        </div>

        <div class="modal-body">

            @using (Html.BeginForm("MemberEdit", "Tranning", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>থানা/উপজেলা</label>
                            @Html.DropDownListFor(model => model.Upid, ViewBag.subdistriclist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })

                        </div>
                    </div>


                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>পদবী</label>

                            @Html.DropDownListFor(model => model.Degisnation, ViewBag.designationlist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>সদস্যের নাম </label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-sm", placeholder = "বাংলায়" })
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>পিতার নাম</label>
                            @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control input-sm", placeholder = "বাংলায়" })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>পেশা</label>
                            @Html.TextBoxFor(model => model.occupation, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>শিক্ষা</label>
                            @Html.DropDownListFor(model => model.education, ViewBag.exam as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>মোবাইল</label>

                            @Html.TextBoxFor(model => model.mobile, new { @class = "form-control", id = "mobile", placeholder = "English Number", maxlength = 11 })

                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>বয়স</label>

                            @Html.TextBoxFor(model => model.age, new { @class = "form-control", id = "age" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>সদস্য নং </label>
                            @Html.TextBoxFor(model => model.personno, new { @class = "form-control input-sm", id = "perid" })
                        </div>
                    </div>


                </div>

                <div class="row" style="text-align:center">
                    <input type="submit" id="btnedit" class="btn btn-info" value="Update" />
                </div>
            }


        </div>

        <div class="modal-footer border-default">
            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>

        </div>
    </div>
</div>


    <script src="~/BanglaDate/js/jquery.js"></script>
    <script src="~/BanglaDate/js/jquery-ui-bangla.js"></script>
<link href="~/BanglaDate/css/jquery-ui.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/BanglaDate/css/style.css" type="text/css" rel="stylesheet" />
    <script>
        $("#mobile").keypress(function (e) {

            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            
                return false;
            }
        })
    </script>



