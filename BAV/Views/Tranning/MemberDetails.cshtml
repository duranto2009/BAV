                    <label>গ্রাম/বাড়ী/রোড: </label>
                    @Html.DisplayFor(model => model.paddress, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>ডাকঘর(কোডসহ): </label>
                    @Html.DisplayFor(model => model.prpostcode, new { @class = "form-control input-sm" })

                </div>
            </div>


        </div>
        <div class="row ">
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>ওর্য়াড: </label>
                    @Html.DisplayFor(model => model.perunion, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    @{
                        if (Model.perunions != null)
                        {
                            <label>ইউনিয়ন: </label>
                            @Html.DisplayFor(model => model.perunions, new { @class = "form-control input-sm" })

                        }

                    }


                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>থানা/উপজেলা: </label>
                    @Html.DisplayFor(model => model.perthana, new { @class = "form-control input-sm" })

                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>জেলা: </label>
                    @Html.DisplayFor(model => model.perdist, new { @class = "form-control input-sm" })
                </div>
            </div>
        </div>

        @*Permanaent Address end*@
        @*Present Address*@
        <legend class="text-bold">কর্মস্থল</legend>
        
        <div class="row ">

            <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                    <label>গার্ডের নাম: </label>
                    @Html.DisplayFor(model => model.paddress, new { @class = "form-control input-sm" })
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>থানা/উপজেলা: </label>
                    @Html.DisplayFor(model => model.presthana, new { @class = "form-control input-sm" })

                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>জেলা: </label>
                    @Html.DisplayFor(model => model.presdist, new { @class = "form-control input-sm" })
                </div>
            </div>
        </div>

        @*Present Address end*@
        @{if (ViewBag.c == "true")
        {

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    @{
                Html.RenderAction("PrasikkanDetails", "Tranning", Model.Id );
                    }

                </div>
            </div>
        }
        }

    </div>
</div>



<div id="ModalMembersEdit" class="modal fade">

</div>



