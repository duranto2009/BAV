                    <label>পদবী: </label>
                    @Html.DisplayFor(model => model.designation, new { @class = "form-control input-sm" })
                </div>
            </div>
        </div>

        <div class="row ">

            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>সদস্যের নাম: </label>
                    @Html.DisplayFor(model => model.bname, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>পিতার নাম: </label>
                    @Html.DisplayFor(model => model.faname, new { @class = "form-control input-sm" })
                </div>
            </div>

        </div>
        <div class="row ">

            <div class="col-xs-4 col-sm-4 col-md-4">
