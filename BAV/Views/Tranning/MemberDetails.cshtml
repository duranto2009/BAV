                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>শিক্ষাগত যোগ্যতা: </label>
                    @Html.DisplayFor(model => model.education, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <div class="form-group">
                    <label>পেশা: </label>
                    @Html.DisplayFor(model => model.occupation, new { @class = "form-control input-sm" })
                </div>
            </div>
        </div>
        <div class="text-right">
            @Html.ActionLink("Edit", "MemberEdit", new { id = Model.Id }, new { @class = "btn btn-primary", data_toggle = "modal", data_target = "#ModalMembersEdit" })
        </div>
        @*Permanaent Address*@

