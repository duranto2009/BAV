                        </div>
                    </div>


                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>থানা/উপজেলা</label>
                            @Html.DropDownList("subdistricid", new SelectList(string.Empty, "Value", "Text"), "সিলেক্ট", new { @class = "form-control input-sm" })

                        </div>
                    </div>
                }
                else
                {

                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <label>থানা/উপজেলা</label>
                            @Html.DropDownList("subdistricid", ViewBag.subdistriclist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })

                        </div>
                    </div>

                }

            </div>


            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>প্লাটুনের নাম</label>

                        @Html.DropDownListFor(model => model.platunId, new SelectList(string.Empty, "Value", "Text"), "সিলেক্ট", new { @class = "form-control input-sm", id = "platun" })
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>পদবী</label>

                        @Html.DropDownListFor(model => model.DesignationId, ViewBag.designationlist as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>সদস্যের নাম </label>
                        @Html.TextBoxFor(model => model.BanglaName, new { @class = "form-control input-sm", placeholder = "বাংলায়" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>Volunteer Name</label>
                        @Html.TextBoxFor(model => model.EnglishName, new { @class = "form-control input-sm", placeholder = "ইংরেজী-বড় হাতে" })
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>পিতার নাম</label>
                        @Html.TextBoxFor(model => model.BanglaFatherName, new { @class = "form-control input-sm", placeholder = "বাংলায়" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>Father's Name</label>
                        @Html.TextBoxFor(model => model.EnglishFatherName, new { @class = "form-control input-sm", placeholder = "ইংরেজী-বড় হাতে" })
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>মাতার নাম</label>
                        @Html.TextBoxFor(model => model.BanglaMotherName, new { @class = "form-control input-sm", placeholder = "বাংলায়" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>Mother's Name</label>
                        @Html.TextBoxFor(model => model.EnglishMotherName, new { @class = "form-control input-sm", placeholder = "ইংরেজী-বড় হাতে" })
                    </div>
                </div>

            </div>
            
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>বৈবাহিক অবস্থা</label><br />
                        @Html.RadioButtonFor(model => model.MaritalStatus, "বিবাহিত", new { id = "m" })
                        @Html.Label("1", "বিবাহিত")


                        @Html.RadioButtonFor(model => model.MaritalStatus, "অবিবাহিত", new { @checked = true, id = "u" })
                        @Html.Label("2", "অবিবাহিত")
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>পেশা</label>
                        @Html.TextBoxFor(model => model.occupation, new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
            <div class="row" style="display:none" id="b">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>স্বামী/স্ত্রীর নাম</label>
                        @Html.TextBoxFor(model => model.WORHName, new { @class = "form-control input-sm", id = "f" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>
                            স্বামী/স্ত্রীর পেশা
                        </label>
                        @Html.TextBoxFor(model => model.WorHOccupation, new { @class = "form-control input-sm", id = "l" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>জাতীয় পরিচয় পত্র নং</label>
                        @Html.TextBoxFor(model => model.NID, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>শিক্ষা</label>
                        @Html.DropDownListFor(model => model.educationalQuId, ViewBag.exam as IEnumerable<SelectListItem>, "সিলেক্ট", new { @class = "form-control input-sm" })

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label> সনদ টাইপ</label>

                        @Html.DropDownListFor(model => model.dp, ViewBag.dobpasslist as IEnumerable<SelectListItem>, new { @class = "form-control input-sm", id = "dobpass" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6" id="dno" hidden>
                    <div class="form-group">
                        <label id="dlo">জন্ম নিবন্ধন সনদ নং</label>
                        @Html.TextBoxFor(model => model.DOBSNo, new { @class = "form-control input-sm" })
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>ধর্ম </label>

                        @Html.DropDownListFor(model => model.ReligionId, ViewBag.Religion as IEnumerable<SelectListItem>, "সিলেক্ট ধর্ম", new { @class = "form-control input-sm" })

                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>জন্ম তারিখ</label>
                        @Html.TextBoxFor(model => model.DOB, new { @class = "form-control", id = "DOB" })
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <label>মোবাইল</label>

                        @Html.TextBoxFor(model => model.mobile, new { @class = "form-control", id = "mobile", placeholder = "English Number" })

                    </div>
                </div>
