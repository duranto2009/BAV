                changeMonth: true,
                changeYear: true,
                yearRange: "-70:+1"
            }, $.datepicker.regional['bn-BD']);
        });
    </script>

    <script type="text/javascript">
        $(document).on("change", "#DOB", function () {
            var dateArr = $(this).val().split('-');
            var banglaDate = mrt(dateArr[0]) + '-' + mrt(dateArr[1]) + '-' + mrt(dateArr[2]);
            $(this).val(banglaDate);
        });
    </script>

    <script>

        $(document).ready(function () {

            $("#b").hide();
 
        });
        $("#m").click(function () {
            $("#b").show("slow");
        });

        $("#u").click(function () {
            $("#b").hide("fast");
            $("#f").val("");
            $("#l").val("");
        });
        $('#dobpass').change(function (event) {

            var searchKey = $(this).val();
            if (searchKey != 4) {
                var text = $('#dobpass option:selected').text();
                $('#dno').show();
                $('#dlo').text(text);
            }
            else
            {
                $('#dno').hide();
            }
           
        });
        $('#mobile').keypress(function (event) {

            if (event.which == 8 || event.keyCode == 37 || event.keyCode == 39 || event.keyCode == 46)
                return true;

            else if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57))
                event.preventDefault();
            var txt = $("#mobile").val();
            if (txt.indexOf(".") > -1 && txt.split(".")[1].length > 1) {
                var substr = txt.split(".")[1].substring(0, 1);
                $("#mobile").val(txt.split(".")[0] + "." + substr);
            }

        });
       
    </script>

