@model BAV.Models.Member
@{
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header border-default">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">ঠিকানা</h4>
        </div>

        <div class="modal-body">
            @using (Html.BeginForm("Deactive", "Member"))
            {

                @Html.ValidationSummary(true)


                <fieldset>

                    <legend>Member Deactive</legend>

                    <table style="width:100%">
                        <tr>
                            <td style="padding:5px"><b></b></td>
                            <td>
                                @Html.HiddenFor(model => model.MemberId, new { @class = "form-control input-sm" })
                            </td>

                        </tr>

                        <tr>
                            <td style="padding:5px"><b>Remarks</b></td>
                            <td>
                                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control input-sm", Requaried = true })
                            </td>

                        </tr>

                        <tr>

                            <td colspan="2" style="text-align:center;padding:20px">
                                @{if (TempData["error"] != null)
                                {
                                    <button type="submit" id="btnUpdate" name="Command" disabled value="Update" onclick="return confirm('Are you sure you want to Deactive?')" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                                        <span class="ui-button-text">Submit</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" id="btnUpdate" name="Command" value="Update" onclick="return confirm('Are you sure you want to Deactive?')" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                                        <span class="ui-button-text">Submit</span>
                                    </button>

                                }
                                }
                            </td>
                        </tr>
                    </table>
                    <p style="text-align:center;color:red"> @TempData["error"]</p>
                </fieldset>

            }

        </div>

        <div class="modal-footer border-default">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

        </div>
    </div>
</div>

